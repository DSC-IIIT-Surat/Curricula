<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="88dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/subject_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="8dp"
        android:src="@drawable/ic_cn4"
        android:layout_gravity="center_vertical|center" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/subject_textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|bottom"
            android:textColor="@color/subjectNameColor"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Subject Name"/>

        <TextView
            android:id="@+id/subjectCode_textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/subjectNameColor"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Subject Code"/>

    </LinearLayout>

</LinearLayout>